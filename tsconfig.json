{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true
  },
  "include": [],
  "exclude": ["node_modules", "dist", ".next", ".turbo"],
  "references": [
    { "path": "./apps/app" },
    { "path": "./apps/web" },
    { "path": "./packages/ui" },
    { "path": "./packages/utils" },
    { "path": "./packages/types" },
    { "path": "./packages/database" }
  ]
}
